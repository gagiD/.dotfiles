!=================================================
!               FONTS
!=================================================
Xft.dpi: 120
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb



!================================================
!               URXVT
!================================================

! URXVT GENERAL CONFIG
!------------------------------------------------
URxvt.imLocale: en_US.UTF-8


! URXVT FONTS
!------------------------------------------------
URxvt.font:xft:UbuntuMono NF:size=16
URxvt.boldFont:xft:UbuntuMono NF:bold:size=16
URxvt.italicfont:xft:UbuntuMono NF:italic:size=16
URxvt.bolditalicFont:xft:UbuntuMono NF:bold:italic:size=16
URxvt*letterSpace: -1
URxvt*allow_bold: true


! SCROLL
!------------------------------------------------
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.secondaryWheel: 1
URxvt.saveLines: 1524
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.keysym.Shift-Up:   command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007


! EXIT
!-------------------------------------------------
URxvt.perl-ext-common: default,matcher,resize-font,clipboard,url-select


! URL
!-----------------------------------------------
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.keysym.M-u: perl:url-select:select_next


! RESIZE FONT
------------------------------------------------
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger


! Default binding disabled
!------------------------------------------------
URxvt.iso14755: false
URxvt.iso14755_52: false


! CURSOR
!------------------------------------------------
URxvt.cursorBlink: true
URxvt.cursorUnderline: false


! CLIPBOARD
!-----------------------------------------------
URxvt.keysym.M-w: perl:clipboard:copy
URxvt.keysym.C-y: perl:clipboard:paste
URxvt.keysym.M-C-w: perl:clipboard:paste_escaped 


! COLORS AND LOOK
!-----------------------------------------------
! special
*.foreground:   #cdcbcb
*.background:   #151515
*.cursorColor:  #cdcbcb

! black
*.color0:       #131415
*.color8:       #393c3b

! red
*.color1:       #cc0000
*.color9:       #ef2929

! green
*.color2:       #4e9a06
*.color10:      #8ae234

! yellow
*.color3:       #c4a000
*.color11:      #fce94f

! blue
*.color4:       #3465a4
*.color12:      #729fcf

! magenta
*.color5:       #75507b
*.color13:      #ad7fa8

! cyan
*.color6:       #06989a
*.color14:      #34e2e2

! white
*.color7:       #d3d7cf
*.color15:      #eeeeec



URxvt.depth: 32
URxvt.background: [100]#151515



!====================================================
!                    Emacs
!====================================================
Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
! Font settings
Emacs*FontBackend: xft
Emacs*Font: Ubuntu Mono:22
! transparency 0-100
Emacs.alpha: 99

